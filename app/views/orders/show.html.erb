<!-- Content -->
<div class="container-fluid flex-grow-1 container-p-y">

  <h4 class="font-weight-bold py-3 mb-4">
    Objednávka <span class="text-muted">#<%= @order.id %></span>
  </h4>

  <div class="card">

    <!-- Status -->
    <div class="card-body">
      <strong class="mr-2">Stav:</strong>
      <span class="text-big"><span class="badge badge-<%= order_status_badge(@order) %>"><%= order_status_badge_text(@order) %></span></span>
      <!--<span class="text-muted small ml-1">02/25/2018</span>-->
    </div>
    <hr class="m-0">
    <!-- / Status -->

    <!-- Info -->
    <div class="card-body pb-1">
      <div class="row">
        <div class="col-md-4 mb-3">
          <div class="text-muted small">Datum</div>
          <%= @order.created_at.strftime("%d.%m.%Y %l:%Mh") %>
        </div>
        <div class="col-md-4 mb-3">
          <div class="text-muted small">Položek celkem</div>
          <%= total_order_items(@order) %>
        </div>
        <div class="col-md-4 mb-3">
          <div class="text-muted small">Cena</div>
          <h5 class= "font-weight-bold "><%= number_to_currency(@order.total_price, options = {precision: 0, unit: "Kč", separator: ",", delimiter: ".", format: "%n %u"}) %></h5>
        </div>
      </div>
    </div>
    <hr class="m-0">
    <!-- / Info -->




    <!-- Items -->
    <div class="card-body">
      <h6 class="small font-weight-semibold">
        Položky
      </h6>

      <div class="table-responsive">
        <table class="table table-bordered m-0" style="min-width:550px;">
          <tbody>
  
            <% @order_items.each do |item| %>
              <tr>
                <td class="p-4">
                  <div class="media align-items-center">
                    <!--<img src="assets/img/uikit/nike-1.jpg" class="d-block ui-w-40 ui-bordered mr-4" alt>-->
                    <%= image_tag(item.product.image.thumb.url, class: "d-block ui-w-40 ui-bordered mr-4") if item.product.image? %>
                    <div class="media-body">
                      <div class="d-block text-dark"><%= item.product.title %> <span class="text-muted">#<%= item.product.id %></span></div>
                      <!--<small>-->
                      <!--  <span class="text-muted">Color:</span>-->
                      <!--  <span class="ui-product-color ui-product-color-sm align-text-bottom" style="background:#e81e2c;"></span> &nbsp;-->
                      <!--  <span class="text-muted">Size: </span> EU 37 &nbsp;-->
                      <!--  <span class="text-muted">Ships from: </span> China-->
                      <!--</small>-->
                    </div>
                  </div>
                </td>
                <!-- Set column width -->
                <td class="align-middle p-4" style="width: 66px;">
                  x<%= item.quantity %>
                </td>
                <!-- Set column width -->
                <td class="text-right font-weight-semibold align-middle p-4" style="width: 100px;">
                  <%= number_to_currency((item.product.price * item.quantity), options = {precision: 0, unit: "Kč", separator: ",", delimiter: ".", format: "%n %u"}) %>
                </td>
              </tr>
            <% end %>


          </tbody>
        </table>
      </div>
    </div>
    <!-- / Items -->

  </div>

</div>
<!-- / Content -->
<tr>
  <td class="p-4">
    <div class="media align-items-center">
      <%= image_tag(line_item.product.image.thumb.url, class: "d-block ui-w-40 ui-bordered mr-4") if line_item.product.image? %>
      <div class="media-body">
        <!--<a href="#" class="d-block text-dark"><%= line_item.product.title %></a>-->
        <%= link_to line_item.product.title, product_path(line_item.product), class: "d-block text-dark" %>
        <small>
          <!--<span class="text-muted">Color:</span>-->
          <!--<span class="ui-product-color ui-product-color-sm align-text-bottom" style="background:#e81e2c;"></span> &nbsp;-->
          <span class="text-muted">Druh produktu: </span> alkohol &nbsp;
          <span class="text-muted">Obsah: </span> 0,75l
        </small>
      </div>
    </div>
  </td>
  <td class="text-right font-weight-semibold align-middle p-4"><%= number_to_currency(line_item.product.price, options = {unit: "Kč", separator: ",", delimiter: "", format: "%n%u"}) %></td>
  <td class="align-middle p-4"><input type="text" class="form-control text-center" value="<%= line_item.quantity %>"></td>
  <td class="text-right font-weight-semibold align-middle p-4"><%= number_to_currency((line_item.product.price * line_item.quantity), options = {unit: "Kč", separator: ",", delimiter: "", format: "%n%u"}) %></td>
  <td class="text-center align-middle px-0">
    
    <%= link_to line_item_path(line_item), method: :delete, class: "shop-tooltip close float-none text-danger" do %>
      *
    <% end %>
    
  </td>
</tr>


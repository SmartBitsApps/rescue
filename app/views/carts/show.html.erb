<!--TODO: do a proper warnings with thml layout-->
<p id="notice"><%= notice %></p>
<!-- Cart -->
  <div class="container px-3 my-5 clearfix">

    <!-- Shopping cart table -->
    <div class="table-responsive">
      <table class="table table-bordered m-0">
        <thead>
          <tr>
            <!-- Set columns width -->
            <th class="text-center py-3 px-4" style="min-width: 400px;">Název produktu</th>
            <th class="text-right py-3 px-4" style="width: 100px;">Cena</th>
            <th class="text-center py-3 px-4" style="width: 120px;">Množství</th>
            <th class="text-right py-3 px-4" style="width: 100px;">Celkem</th>
            <th class="text-center align-middle py-3 px-0" style="width: 40px;">
            
              
              <%#= link_to remove_multiple_order_items_path(), method: :delete, class: "shop-tooltip close float-none text-danger" do %>
                <!--*-->
              <%# end %>
             
              
              
            </th>
          </tr>
        </thead>
        <tbody>
          
          <%= render(@cart.line_items) %>

        </tbody>
      </table>
    </div>
    <!-- / Shopping cart table -->

    <div class="d-flex flex-wrap justify-content-between align-items-center pb-4">
      <div class="mt-4">
        <!--<label class="text-muted font-weight-normal">Promocode</label>-->
        <!--<input type="text" placeholder="ABC" class="form-control">-->
      </div>
      <div class="d-flex">
        <div class="text-right mt-4 mr-5">
          <!--<label class="text-muted font-weight-normal m-0">Discount</label>-->
          <!--<div class="text-large"><strong>$20</strong></div>-->
        </div>
        <div class="text-right mt-4">
          <label class="text-muted font-weight-normal m-0">Cena celkem</label>
          <div class="text-large"><strong><%= number_to_currency(@cart.total_price, options = {unit: "Kč", separator: ",", delimiter: "", format: "%n%u"}) %></strong></div>
        </div>
      </div>
    </div>

    <div class="float-right">
      <!--<button type="button" class="btn btn-lg btn-default md-btn-flat mt-2 mr-3">Back to shopping</button>-->
      <%= link_to "Zpět", products_path, class: "btn btn-lg btn-default md-btn-flat mt-2 mr-3" %>
      <%= link_to orders_path(:cart_id => @cart.id), class: 'btn btn-primary btn-lg', :method => 'POST' do %>
          + <span class="ion ion-md-cart"></span> &nbsp; Odeslat košík
      <% end %>
      
      <%#= link_to 'Odeslat košík', orders_path(:cart_id => @cart.id), :method => 'POST' %>
      <!--<button type="button" class="btn btn-lg btn-primary mt-2">Odeslat objednávku</button>-->
    </div>

  </div>
  <!-- / Cart -->
